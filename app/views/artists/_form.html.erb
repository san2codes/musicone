<h1 class="art-hdng">Adding an Artist</h1> 

<div class="frm">
<%= form_with model:@artist do  |f| %>
  <div class="field-form p-3">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field-form p-3">
    <%= f.label :dob %>
    <%= f.date_field :dob, autofocus: true, autocomplete: "dob" %>
  </div>
 

  <div class="field-form p-3">
    <%= f.label :bio %>
    <%= f.text_field :bio, autofocus: true, autocomplete: "bio" %>
  </div>

  <div class="field-form p-3">
    <%= f.label :Song %>
    <%= f.select :songname, options_from_collection_for_select(Song.all,:name,:name)%>
    </div>


<div class="actions p-3">
  <%= f.submit "Save",class: "save-button" %>
</div> 
<% end %>
</div>
